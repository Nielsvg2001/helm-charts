{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "kubernetes": {
      "fileMatch": ["\\.yaml$"]
    },
    "terraform": {
      "pinDigests": true
    },
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      }
    ]
  }
  